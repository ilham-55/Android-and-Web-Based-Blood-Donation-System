<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/card_bg"
    android:foreground="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/list_icon"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:src="@drawable/plasma" />

    <TextView
        android:id="@+id/bloodbank_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_toRightOf="@id/list_icon"
        android:paddingTop="10dp"
        android:text="Name"

        android:textAlignment="textStart"
        android:textColor="#F44336"
        android:textSize="18dp"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/bloodbank_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bloodbank_name"
        android:layout_alignStart="@id/bloodbank_name"
        android:layout_alignLeft="@id/bloodbank_name"
        android:text="Address "
        android:textColor="#123" />

    <TextView
        android:id="@+id/bloodbank_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bloodbank_address"
        android:layout_alignStart="@id/bloodbank_address"
        android:layout_alignLeft="@id/bloodbank_address"
        android:layout_marginBottom="5dp"
        android:text="Mobile "
        android:textColor="#3F51B5" />

    <TextView
        android:id="@+id/txt_blood_group2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/donor_name"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:text="A+"
        android:textColor="#E42828"
        android:textSize="25sp" />


</RelativeLayout>