<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:orientation="vertical">


                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/profile_image"
                                android:layout_width="140dp"
                                android:layout_height="140dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/donor"
                                app:civ_border_color="#fff"
                                app:civ_border_width="3dp" />


                            <TextView
                                android:id="@+id/txtName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="2dp"
                                android:letterSpacing="0.025"
                                android:text="USER NAME"
                                android:textAllCaps="true"
                                android:textColor="#FD3D00"
                                android:textSize="26dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txt_profession"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="2dp"
                                android:letterSpacing="0.025"
                                android:text="Blood Donor"
                                android:textColor="@android:color/black"
                                android:textSize="20sp" />

                            <com.romainpiel.shimmer.ShimmerTextView
                                android:layout_width="match_parent"
                                android:layout_height="44dp"
                                android:layout_marginStart="30dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="30dp"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/rounded_button"
                                android:fontFamily="sans-serif-condensed"
                                android:gravity="center"
                                android:padding="3dp"
                                android:text="Information"
                                android:textColor="@color/cardview_light_background"
                                android:textSize="20sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/natural"
                            android:layout_marginTop="35dp"
                            android:orientation="vertical">


                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                android:orientation="horizontal"
                                android:padding="1dp">


                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="7dp"
                                    android:layout_marginTop="2dp"
                                    android:background="@drawable/ic_person" />


                                <TextView
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="2dp"
                                    android:letterSpacing="0.025"
                                    android:text="Name"
                                    android:textColor="#3F51B5"
                                    android:textSize="20sp" />


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txtName2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="2dp"
                                        android:letterSpacing="0.025"
                                        android:text="User Name"
                                        android:textColor="#123"
                                        android:textSize="20sp"
                                        android:textStyle="bold" />


                                </LinearLayout>


                            </LinearLayout>


                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:orientation="horizontal"
                                android:padding="1dp">


                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="7dp"
                                    android:layout_marginTop="2dp"
                                    android:background="@drawable/ic_call" />


                                <TextView
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="2dp"
                                    android:letterSpacing="0.025"
                                    android:text="Mobile"
                                    android:textColor="#FF3F51B5"
                                    android:textSize="20sp" />


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txtCell"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="2dp"
                                        android:letterSpacing="0.025"
                                        android:text="012345678911"
                                        android:textColor="#123"
                                        android:textSize="20sp"
                                        android:textStyle="bold" />


                                </LinearLayout>


                            </LinearLayout>


                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:orientation="horizontal"
                                android:padding="1dp">


                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="7dp"
                                    android:layout_marginTop="2dp"
                                    android:background="@drawable/ic_location" />


                                <TextView
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="2dp"
                                    android:letterSpacing="0.025"
                                    android:text="Division"
                                    android:textColor="#FF3F51B5"
                                    android:textSize="20sp" />


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txtLocation"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="2dp"
                                        android:letterSpacing="0.025"
                                        android:text="User Location"
                                        android:textColor="#123"
                                        android:textSize="20sp"
                                        android:textStyle="bold" />


                                </LinearLayout>


                            </LinearLayout>


                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:orientation="horizontal"
                                android:padding="1dp">


                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="7dp"
                                    android:layout_marginTop="2dp"
                                    android:background="@drawable/ic_gender" />


                                <TextView
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="2dp"
                                    android:letterSpacing="0.025"
                                    android:text="Gender"
                                    android:textColor="#FF3F51B5"
                                    android:textSize="20sp" />


                                <LinearLayout

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txtGender"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="15dp"
                                        android:layout_marginTop="2dp"
                                        android:letterSpacing="0.025"
                                        android:text="Gender"
                                        android:textColor="#123"
                                        android:textSize="20sp"

                                        android:textStyle="bold" />


                                </LinearLayout>


                            </LinearLayout>


                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="4dp"
                                android:orientation="horizontal"
                                android:padding="1dp">


                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="7dp"
                                    android:layout_marginTop="2dp"
                                    android:background="@drawable/ic_schedule" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="2dp"
                                    android:letterSpacing="0.025"
                                    android:text="Last Donate Date "
                                    android:textColor="#FF3F51B5"
                                    android:textSize="20sp" />


                                <LinearLayout

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txt_donate_date1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="15dp"
                                        android:layout_marginTop="2dp"
                                        android:letterSpacing="0.025"
                                        android:text="Date"
                                        android:textColor="#123"
                                        android:textSize="20sp"

                                        android:textStyle="bold" />


                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:orientation="horizontal"
                                android:padding="1dp">


                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="7dp"
                                    android:layout_marginTop="2dp"
                                    android:background="@drawable/ic_lock" />


                                <TextView
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="2dp"
                                    android:letterSpacing="0.025"
                                    android:text="Password"
                                    android:textColor="#FF3F51B5"
                                    android:textSize="20sp" />


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="15dp"
                                        android:layout_marginTop="2dp"
                                        android:letterSpacing="0.025"
                                        android:paddingRight="10dp"
                                        android:text="*******"
                                        android:textColor="#123"
                                        android:textSize="20sp"

                                        android:textStyle="bold" />


                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:gravity="bottom|right"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtEdit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginRight="30dp"
                                    android:background="@drawable/rounded_button"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:text="EDIT"
                                    android:textColor="@color/cardview_light_background"
                                    android:textSize="20sp" />
                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>


            </RelativeLayout>




    </RelativeLayout>

</FrameLayout>
