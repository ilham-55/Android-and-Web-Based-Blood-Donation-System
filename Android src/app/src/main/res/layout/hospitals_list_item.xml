<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/card_bg"
    android:foreground="?android:attr/selectableItemBackground"
    >

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:id="@+id/list_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_placeholder"/>

    <TextView
        android:id="@+id/hospitals_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_toRightOf="@id/list_icon"
        android:paddingTop="10dp"
        android:text="Name"
        android:textAlignment="textStart"
        android:textColor="#F44336"
        android:textSize="17dp"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/hospitals_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hospitals_name"
        android:layout_alignStart="@id/hospitals_name"
        android:layout_alignLeft="@id/hospitals_name"
        android:layout_marginTop="2dp"
        android:layout_toLeftOf="@+id/imageView3"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Category"
        android:textAlignment="viewStart"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/hospitals_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hospitals_category"
        android:layout_alignStart="@+id/hospitals_category"
        android:layout_alignLeft="@+id/hospitals_category"
        android:text="Location "
        android:textColor="#000" />

    <TextView
        android:id="@+id/hospitals_website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:autoLink="web"
        android:layout_below="@id/hospitals_location"
        android:layout_alignStart="@+id/hospitals_category"
        android:layout_alignLeft="@+id/hospitals_category"
        android:text="Website "
        android:textColor="#000" />

</RelativeLayout>
