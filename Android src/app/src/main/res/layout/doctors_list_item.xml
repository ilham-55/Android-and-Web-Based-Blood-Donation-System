<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/card_bg"
    android:foreground="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/list_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:src="@drawable/ic_doctor_list" />

    <TextView
        android:id="@+id/doctors_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_toRightOf="@id/list_icon"
        android:paddingTop="10dp"
        android:text="Name"
        android:textAlignment="textStart"
        android:textColor="#F44336"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/doctors_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/doctors_name"
        android:layout_alignStart="@+id/doctors_specialist"
        android:layout_alignLeft="@+id/doctors_specialist"
        android:text="Qualification"
        android:textColor="#FF9800" />

    <TextView
        android:id="@+id/doctors_specialist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/doctors_details"
        android:layout_alignStart="@id/doctors_name"
        android:layout_alignLeft="@id/doctors_name"
        android:layout_toLeftOf="@+id/imageView3"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Specialist"
        android:textAlignment="viewStart"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#3F51B5"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/doctors_chamber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doctors_specialist"
        android:layout_alignStart="@+id/doctors_specialist"
        android:layout_alignLeft="@+id/doctors_specialist"
        android:text="Chamber "
        android:textColor="#123" />

    <TextView
        android:id="@+id/doctors_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/doctors_chamber"
        android:layout_alignStart="@+id/doctors_specialist"
        android:layout_alignLeft="@+id/doctors_specialist"
        android:layout_marginBottom="5dp"
        android:text="Address "
        android:textColor="#123" />


</RelativeLayout>