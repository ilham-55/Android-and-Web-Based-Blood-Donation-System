<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/bg_four">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/blood_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/round_border"
                    android:drawableRight="@drawable/ic_blood"
                    android:focusable="false"
                    android:hint="Blood Group"
                    android:inputType="text"

                    android:padding="16dp"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/round_border"
                    android:drawableRight="@drawable/ic_location"
                    android:hint="Hospital Name"
                    android:inputType="text"
                    android:padding="16dp"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="16dp" />


                <EditText
                    android:id="@+id/division"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/round_border"
                    android:drawableRight="@drawable/ic_location"
                    android:focusable="false"
                    android:hint="Division"
                    android:inputType="text"

                    android:padding="16dp"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/round_border"
                    android:orientation="vertical">

                    <com.jaredrummler.materialspinner.MaterialSpinner
                        android:id="@+id/etxt_sub_area"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:focusable="false"
                        android:hint="Select Sub Area"
                        android:inputType="text"
                        android:textColor="#FF1200"
                        android:textColorHint="#FF2819"
                        android:textSize="15sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/sinup_txt_area_signup"

                        app:ms_dropdown_height="wrap_content" />
                </LinearLayout>

                <EditText
                    android:id="@+id/bag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"

                    android:layout_marginRight="22dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/round_border"
                    android:drawableRight="@drawable/ic_blood"
                    android:hint="How Many Bags"
                    android:inputType="numberSigned"
                    android:padding="16dp"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/round_border"
                    android:drawableRight="@drawable/ic_blood"
                    android:focusable="false"
                    android:hint="Type"
                    android:inputType="text"

                    android:padding="16dp"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/contact_cell"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"

                    android:layout_marginRight="22dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/round_border"
                    android:drawableRight="@drawable/ic_call"
                    android:hint="01XXXXXXXXX"
                    android:inputType="phone"
                    android:padding="16dp"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="16dp" />


                <EditText
                    android:id="@+id/etxt_lat_lon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/round_border"
                    android:drawableRight="@drawable/ic_location"
                    android:focusable="false"
                    android:hint="Latitude Longitude"
                    android:inputType="text"

                    android:padding="16dp"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txt_submit"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_button"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="SUBMIT REQUEST"
                    android:textColor="#fff"
                    android:textSize="16dp" />

            </LinearLayout>


        </RelativeLayout>

    </FrameLayout>
</ScrollView>