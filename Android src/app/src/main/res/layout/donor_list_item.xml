<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/card_bg">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/list_donor_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:src="@drawable/donor"
        app:civ_border_color="#cccccc"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/donor_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/list_donor_image"
        android:paddingTop="10dp"
        android:text="Name"
        android:textAlignment="textStart"
        android:textColor="#F44336"
        android:textSize="18dp"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/txt_txt_donor_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/donor_name"
        android:layout_alignStart="@id/donor_name"
        android:layout_alignLeft="@id/donor_name"
        android:layout_marginTop="2dp"
        android:layout_toLeftOf="@+id/imageView3"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Blood Group"
        android:textAlignment="viewStart"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/txt_donor_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_txt_donor_gender"
        android:layout_alignStart="@+id/txt_txt_donor_gender"
        android:layout_alignLeft="@+id/txt_txt_donor_gender"
        android:text="Location"
        android:textColor="#000" />

    <TextView
        android:id="@+id/txt_last_donate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_donor_location"
        android:layout_alignStart="@+id/txt_txt_donor_gender"
        android:layout_alignLeft="@+id/txt_txt_donor_gender"
        android:text="Donate Date"
        android:textColor="#3F51B5" />

    <TextView
        android:id="@+id/txt_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_last_donate"
        android:layout_alignStart="@+id/txt_txt_donor_gender"
        android:layout_alignLeft="@+id/txt_txt_donor_gender"
        android:layout_marginBottom="10dp"
        android:text="Status "
        android:textColor="#3F51B5" />

    <TextView
        android:id="@+id/txt_blood_group"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/donor_name"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="A+"
        android:textColor="#E42828"
        android:textSize="25sp" />


</RelativeLayout>
